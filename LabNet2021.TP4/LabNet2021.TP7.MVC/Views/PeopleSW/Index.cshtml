@model List<LabNet2021.TP7.MVC.Models.PeopleSWView>
@{
    ViewBag.Title = "Personajes";
}

<h1>Personajes</h1>

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Altura</th>
                <th scope="col">Color de ojos</th>
                <th scope="col">Género</th>
            </tr>
        </thead>
        @foreach (var people in Model)
        {
            <tbody>
                <tr>
                    <td>@people.Name</td>
                    <td>@people.Height cm</td>
                    <td>@people.Eye_color</td>
                    <td>@people.Gender</td>
                </tr>
            </tbody>
        }
    </table>
</div>
