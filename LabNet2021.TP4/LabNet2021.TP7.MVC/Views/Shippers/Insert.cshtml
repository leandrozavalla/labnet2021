@model LabNet2021.TP7.MVC.Models.ShippersView

@{
    ViewBag.Title = "Transportes";
}

@{ if (ViewBag.ID == null)
    {
        <h1>Insertar transporte</h1>
        <br />

        using (Html.BeginForm("Insert", "Shippers", FormMethod.Post))
        {
            <label>Empresa:</label>
            <br />
            @Html.TextBoxFor(s => s.Company)
            <br />
            @Html.ValidationMessageFor(s => s.Company, "", new { @class = "text-danger" })
            <br />
            <label>Teléfono:</label>
            <br />
            @Html.TextBoxFor(s => s.Phone)
            <br />
            @Html.ValidationMessageFor(s => s.Phone, "", new { @class = "text-danger" })
            <br />
            <br />
            <input type="submit" class="btn btn-success" value="Guardar" />
        }
    }
    else
    {
        <h1>Modificar transporte</h1>
        <br />

        using (Html.BeginForm("Update", "Shippers", FormMethod.Post))
        {
            <label>Empresa:</label>
            <br />
            @Html.TextBoxFor(s => s.Company)
            <br />
            @Html.ValidationMessageFor(s => s.Company, "", new { @class = "text-danger" })
            <br />
            <label>Teléfono:</label>
            <br />
            @Html.TextBoxFor(s => s.Phone)
            <br />
            @Html.ValidationMessageFor(s => s.Phone, "", new { @class = "text-danger" })
            <br />
            <br />
            <input type="submit" class="btn btn-success" value="Guardar" />
        }
    }
}
